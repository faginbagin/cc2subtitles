			<text x="200" y="361" w="470" h="25" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="200" y="386" w="470" h="25" value="%recordingdate %recordingtime (%duration)" font="2" colour="white" static="True" align="left"/>
			<text x="200" y="405" w="470" h="72" value="%description" font="2" colour="white" static="True" align="left"/>

            <next filename="next.png" x="622" y="490" w="48" h="48" mask = "next_mask.png" static="True"/>

        </item>
	</menu>
	
</mythburntheme>
