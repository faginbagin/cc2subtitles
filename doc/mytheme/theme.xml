<?xml version="1.0" encoding="UTF-8"?>
<mythburntheme>
	<!-- Example theme for MythBurn 3 recordings per page -->
	<fonts>
		<font size="23">FreeSans.ttf</font>
		<font size="19">FreeSans.ttf</font>
		<font size="17">FreeSans.ttf</font>
	</fonts>

    <menu background="myBackground.png" music="silence.ac3">
		<!-- item holds the position of a menu item ie. recording -->
		<item>
			<text x="260" y="490" w="200" h="25" value="Page %page" font="2" colour="white" static="True" align="centre"/>
			<previous filename="previous.png" x="50" y="490" w="48" h="48" mask="previous_mask.png" static="True"/>
			<graphic filename="%thumbnail" x="50" y="39" w="133" h="120" static="True"/>
			<text x="200" y="65" w="470" h="25" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="200" y="85" w="470" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="True" align="left"/>
			<text x="200" y="105" w="470" h="60" value="%description" font="2" colour="white" static="True" align="left"/>
            <button x="200" y="39" w="470" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="200" y="39" w="470" h="28" value="%title" font="0" colour="white" align="left"/>
                <textselected x="200" y="39" w="470" h="28" value="%title" font="0" colour="orange" align="left"/>
            </button>
        </item>
		<item>
			<graphic filename="%thumbnail" x="50" y="190" w="133" h="120" static="True" align="left"/>
			<text x="200" y="215" w="470" h="25" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="200" y="235" w="470" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="True" align="left"/>
			<text x="200" y="255" w="470" h="60" value="%description" font="2" colour="white" static="True" align="left"/>
            <button x="200" y="190" w="470" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="200" y="190" w="470" h="28" value="%title" font="0" colour="white" align="left"/>
                <textselected x="200" y="190" w="470" h="28" value="%title" font="0" colour="orange" align="left"/>
            </button>
        </item>
		<item>
			<graphic filename="%thumbnail" x="50" y="339" w="133" h="120" static="True"/>
			<text x="200" y="365" w="470" h="25" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="200" y="385" w="470" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="True" align="left"/>
			<text x="200" y="405" w="470" h="60" value="%description" font="2" colour="white" static="True" align="left"/>
            <button x="200" y="339" w="470" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="200" y="339" w="470" h="28" value="%title" font="0" colour="white" align="left"/>
                <textselected x="200" y="339" w="470" h="28" value="%title" font="0" colour="orange" align="left"/>
            </button>
            <next filename="next.png" x="622" y="490" w="48" h="48" mask = "next_mask.png" static="True"/>
        </item>
	</menu>
	
</mythburntheme>
