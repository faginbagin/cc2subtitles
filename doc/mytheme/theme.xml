            </button>
			<text x="200" y="211" w="470" h="25" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="200" y="236" w="470" h="25" value="%recordingdate %recordingtime (%duration)" font="2" colour="white" static="True" align="left"/>
			<text x="200" y="255" w="470" h="72" value="%description" font="2" colour="white" static="True" align="left"/>
        </item>
		<item>
			<graphic filename="%thumbnail" x="50" y="340" w="133" h="120" static="True"/>
            <button x="200" y="332" w="470" h="36" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="200" y="332" w="470" h="36" value="%title" font="0" colour="white" align="left"/>
                <textselected x="200" y="332" w="470" h="36" value="%title" font="0" colour="orange" align="left"/>
