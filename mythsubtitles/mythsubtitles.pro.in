MYTHTV_SRC = @MYTHTV_SRC@
include ( $${MYTHTV_SRC}/config.mak )
include ( $${MYTHTV_SRC}/settings.pro)

TEMPLATE = app
CONFIG += thread
target.path = $${PREFIX}/bin
INSTALLS = target

QMAKE_CLEAN += $(TARGET)

# Input
SOURCES += main.cpp
SOURCES += Decoder.cpp IvtvDecoder.cpp MpegDecoder.cpp NuvDecoder.cpp
SOURCES += vbi.cpp

INCLUDEPATH += $${MYTHTV_SRC}/libs
INCLUDEPATH += $${MYTHTV_SRC}/external/FFmpeg
INCLUDEPATH += $${MYTHTV_SRC}/libs/libmythtv
INCLUDEPATH += $${MYTHTV_SRC}/libs/libmythdb

LIBS += -L$${MYTHTV_SRC}/external/FFmpeg/libavformat
LIBS += -lmythavformat
LIBS += -L$${MYTHTV_SRC}/external/FFmpeg/libavutil
LIBS += -lmythavutil
LIBS += -L$${MYTHTV_SRC}/external/FFmpeg/libavcodec
LIBS += -lmythavcodec
LIBS += -lzvbi
